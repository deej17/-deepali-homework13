<div style="display: flex">
  <div class="cardPlain">
    <div class="container" style="text-align:center">
      <h2>Burgers to be devoured!</h2>

      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}

    </div>
  </div>
</div>
<div style="display: flex">
  <div class="cardPlain">
    <div class="container" style="text-align:center">
      <h2>Yum! Eaten Burgers!</h2>

      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}

    </div>
  </div>
</div>

<div style="display: flex">
  <div class="cardPlain">
    <div class="container" style="text-align:center">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>